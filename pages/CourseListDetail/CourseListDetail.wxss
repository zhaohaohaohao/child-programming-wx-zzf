.page{
  padding: 15rpx;
}
.title {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 36rpx;
  color: #222;
  width: 100%;
}
.dates {
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}
.image {
  width: 50rpx;
  height: 50rpx;
}
.date {
  margin-left: 10rpx;
}

/* 横着的分割View样式 */
/*分割线样式*/
.divLine {
  margin-top: 10rpx;
  margin-right: 10rpx;
  background: #eaebed;
  width: 100%;
  height: 3rpx;
}
.teacher {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.item-teacher-image {
  width: 70rpx;
  height: 70rpx;
}
.item-teacherName {
  margin-left: 7rpx;
}
.price {
  color: red;
  font-weight: bold;
}
.bg-img{
  margin-top: 15rpx;
  margin-bottom: 5px;
  width: 180rpx;
  height: 55rpx;
  background-color: aqua;
  border-radius: 20rpx;
  text-align: center;
}
.introduction{
  align-items: center;
  height: 55rpx;
  font-size: 38rpx;
  font-weight: bold;
  line-height: 55rpx;
  color: #222;
  width: 100%;
  margin-top: 15rpx;
}
.course-content-style{
  width: 100%;
  height: auto;
  border: 5rpx #eaebed solid;
  border-radius: 25rpx;
  padding: 5rpx;
}

.table{
   border: 5rpx #eaebed solid;
  border-radius: 25rpx;
   width: 100%;
   font-size:13px; 
}

.tr{
   width: 100%;
   display: flex;
   justify-content: space-around;
}

.td{
  padding: 10rpx;
  border-bottom:2rpx #eaebed solid;
  border-right:2rpx #eaebed solid;
  text-align: center;
  width: 100%;  
}

.th{
   padding: 10rpx;
  border-bottom:2rpx #eaebed solid;
  border-right:2rpx #eaebed solid;
  text-align: center;
  width: 50%;  
  font-weight: 400;
}

.submitBtn {
  width: 80%;
  margin-top: 20rpx;
  background-color: greenyellow;
  color: white;
  border-radius: 98rpx; 
}


