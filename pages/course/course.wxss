.emty-view{
  width: 100%;
  height:80rpx;
}
.bottom-view{
  width: 100%;
  position:fixed;
  bottom:0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color:  gainsboro;
}
.bottom-button{
  width: 130rpx;
  height:80rpx;
  background-color: white;
  border-radius: 20rpx;
}
.bottom-button-img{
  width: 70rpx;
  height:70rpx;
  padding-left: 30rpx;
  padding-top: 5rpx;
}
.share image {
  width: 65rpx;
  height: 65rpx;
  display: inline-block;
  margin: 10rpx 0 0 0;
}


.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 2000rpx;
