/* 课程列表 */

.item-background {
  background-color: #f2f3f5;
  padding: 5rpx;
}

.scroll-view-item {
  background-color: #fff;
  padding: 13rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* border: 1rpx solid black; */
  border-radius: 35rpx;
  height: 335rpx;
}

.item-title {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 36rpx;
  color: #222;
  width: 100%;
}

.item-dates {
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}

.item-image {
  width: 50rpx;
  height: 50rpx;
}

.item-date {
  margin-left: 10rpx;
}

.item-locations {
  display: flex;
  flex-direction: row;
  margin-top: 2rpx;
  align-items: center;
}

.item-location {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.bottom-text {
  width: 100%;
  background-color: white;
  justify-content: center;
  display: flex;
  height: 70rpx;
  text-align: center;
  align-items: center;
  margin: auto;
}
